{
  "name": "instnce-backend",
  "version": "0.1.0",
  "description": "The backend for instnce webapp",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm-run-all -p start-react start-server-dev",
    "start-server-dev": "nodemon server.js",
    "start-react": "cd frontend && npm install && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nafees-rawji/instnce.git"
  },
  "author": "Instnce",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nafees-rawji/instnce/issues"
  },
  "homepage": "https://github.com/nafees-rawji/instnce#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "basic-auth": "^2.0.0",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "morgan": "^1.9.0",
    "npm": "^5.8.0",
    "querystring": "^0.2.0",
    "redux-heartbeat": "^0.3.0",
    "redux-saga": "^1.0.0-beta.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ],
      "no-console": "off"
    }
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2",
    "nodemon": "^1.17.1"
  }
}
